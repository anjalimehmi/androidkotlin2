<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen3"
    android:orientation="vertical"
    android:background="@drawable/sc3"
    android:padding="20dp">




    <TextView
        android:id="@+id/textView7"
        android:layout_width="146dp"
        android:layout_height="150dp"
        android:text="Log in"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="bottom"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="157dp" />

    <LinearLayout
        android:id="@+id/main2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="40dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/contact"
            tools:layout_editor_absoluteX="700dp"
            tools:layout_editor_absoluteY="600dp"/>


        <EditText
            android:id="@+id/textView14"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:gravity="left"
            android:layout_gravity="center"
            android:hint="   enter your Username"
            android:background="@drawable/scc3"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="179dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@android:drawable/ic_lock_lock"
            tools:layout_editor_absoluteX="700dp"
            tools:layout_editor_absoluteY="600dp" />


        <EditText
            android:id="@+id/textView15"
            android:layout_width="337dp"
            android:layout_height="50dp"
            android:background="@drawable/sccc3"
            android:gravity="left"
            android:hint="    ........"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="227dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button8"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FA9ABB"
            android:text="Done"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="368dp" />


        <Button
            android:id="@+id/button9"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:gravity="right"
            android:backgroundTint="#ffffff"
            android:text="Need help?"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="223dp"
            tools:layout_editor_absoluteY="368dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="220dp"
            android:layout_height="27dp"
            android:text="Don't have any account?"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="436dp" />

        <Button
            android:id="@+id/button10"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:backgroundtint="@drawable/scc3"
            android:gravity="left"
            android:text="sign up"
            tools:layout_editor_absoluteX="181dp"
            tools:layout_editor_absoluteY="422dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="201dp"
        android:layout_height="289dp"
        android:backgroundTintMode="screen"
        app:srcCompat="@drawable/man"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="494dp" />

</LinearLayout>